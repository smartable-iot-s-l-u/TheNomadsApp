<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NomadApp.Views.PrincipalPage"
             BindingContext="{Binding Main, Source={StaticResource Locator}}">
    <ContentPage.Content>
        <ScrollView
            BindingContext="{Binding Principal}">
            <StackLayout
            Padding="10,20,10,20">
            <Image
                Source="tienda_campana2"
                WidthRequest="155">
                
            </Image>

            <StackLayout>
                <Label 
                FontSize="45"    
                HorizontalOptions="CenterAndExpand"
                Margin="30"
                Text="Bienvenid@"
                TextColor="#3e4241"/>
                
                <Label 
                FontSize="20"
                HorizontalOptions="CenterAndExpand"
                Margin="2"
                Text="Antes de empezar a usar la app"
                TextColor="#3e4241"/>
                
                <Label 
                FontSize="15"
                HorizontalOptions="Center"
                Margin="58"
                Text="¿Qué perfil tienes?"
                TextColor="#3e4241"/>
                
            </StackLayout>

            <StackLayout>
                <Grid
                    Margin="0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button
                    BackgroundColor="#00b7cf" 
                    BorderWidth="43"
                    CornerRadius="23"
                    Grid.Row="0"
                    Grid.Column="0"
                    HorizontalOptions="FillAndExpand"
                    x:Name="btnafitrion"
                    Text="Anfitrion"
                    TextColor="#3e4241">
                    </Button>
                    
                    <Button
                    BackgroundColor="#a4c900" 
                    BorderWidth="43"
                    CornerRadius="23"
                    Grid.Row="0"
                    Grid.Column="1"
                    x:Name="btnparticular"
                    Text="Nómada"
                    TextColor="#3e4241">
                    </Button>
                </Grid>
            </StackLayout>
                <StackLayout>
                    <Grid
                    Margin="20,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                    <Label
                    FontSize="Micro"
                    Grid.Row="0"
                    Grid.Column="0"
                    HorizontalOptions="Center"                   
                    Text="Restaurantes, cefeterías,
                        hoteles y coworkings"
                    TextColor="#3e4241">
                    </Label>

                    <Label
                    FontSize="Micro"
                    Grid.Row="0"
                    Grid.Column="1"
                    HorizontalOptions="FillAndExpand" 
                    Margin="20,2"
                    Text="Cualquier persona que 
                        necesite un espacio"
                    TextColor="#3e4241">
                        </Label>
                    </Grid>
                </StackLayout>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>